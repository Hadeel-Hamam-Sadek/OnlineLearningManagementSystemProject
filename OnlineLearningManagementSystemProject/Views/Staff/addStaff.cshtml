<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/AddUser.css">
    <title>Add Staff</title>
</head>

<body>
    <div class="header-add-student">
        <span class="add-student">Add Staff</span>
    </div>


    <div class="div-form">
        <form asp-action="Add" form method="post" enctype="multipart/form-data" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="fullname">
                <!-- <label for="firstname-input" class="firstname-label">First Name</label> -->
                <input type="text" asp-for="FirstName" id="firstname-input" placeholder="First Name" required>
                <span asp-validation-for="FirstName" class="text-danger"></span>

                <!-- <label for="lastname-input" class="lastname-label">Last Name</label> -->
                <input type="text" asp-for="LastName" id="lastname-input" placeholder="Last Name" required>
                <span asp-validation-for="LastName" class="text-danger"></span>
                @*<input type="hidden" asp-for="UserID" value=@TempData["UserId"]/>*@

            </div>

            <div class="nid-div">
                <!-- <label for="UniId">University Id</label class="uniid-label"> -->
                <input id="nid" asp-for="NationalID" minlength="14" maxlength="14" type="text" placeholder="National ID" required>
                <span asp-validation-for="NationalID" class="text-danger"></span>
            </div>

            <div class="mobile-div">
                <!-- <label for="UniId">University Id</label class="uniid-label"> -->
                <input id="mobile" asp-for="Mobile" type="text" placeholder="Mobile Number" required>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>




            <div class="img-div">
                <label class="img-label" asp-for="formFile" for="img">Staff Picture</label>
                <input id="img" type="file" asp-for="formFile" placeholder="Student Picture" accept="image/*">
                <span asp-validation-for="formFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-addstudent">Add Satff</button>

        </form>
    </div>






</body>



